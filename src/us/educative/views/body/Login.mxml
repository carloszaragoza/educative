		<s:TextInput id="txtUsuario" textAlign="center" text="" x="63" y="10" width="100%" height="30" prompt="Nombre de usuario"/>
		<s:TextInput id="txtClave"  textAlign="center" text="" x="49" y="82" width="100%" height="30" displayAsPassword="true"
					 prompt="Clave de acceso"/>
