			<s:VerticalLayout gap="4" horizontalAlign="center" paddingBottom="15" paddingLeft="15"
							  paddingRight="15" paddingTop="15"/>
		</s:layout>
		<s:controlBarContent>
			<s:Button width="100%" height="33" label="Login" id="LoginButtonClick" click="clicLogin()" icon="assets/icons/login.png" styleName="primaryButton"/>
