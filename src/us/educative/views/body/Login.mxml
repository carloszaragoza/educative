				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:body="us.educative.views.body.*" width="250" height="186">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Panel horizontalCenter="0"
			 title="LOGIN" width="100%" height="100%">
		
